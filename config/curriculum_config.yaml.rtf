# =============================================================================\
# LIFE SKILLS CURRICULUM - 6 WEEKS\
# =============================================================================\
life_skills:\
  enabled: true\
  \
  # Week 1: Cognitive Discovery\
  week_1:\
    name: "Cognitive Discovery"\
    module: "CognitiveDiscoveryGPT"\
    duration: "1 week"\
    objectives:\
      - "Build self-awareness of brain patterns"\
      - "Identify focus patterns"\
      - "Recognize energy rhythms"\
      - "Understand motivation triggers"\
    \
    outputs:\
      - "Brain Snapshot summary"\
      - "brain_profile object"\
    \
    conversation_style:\
      tone: "warm, peer-coach"\
      validation: "neurodivergent-affirming"\
      approach: "exploratory, non-judgmental"\
    \
    prompts:\
      opening: "Let's explore how your brain naturally works. When is it easiest for you to focus? What gives you energy? What helps you stay motivated?"\
      reflection_areas:\
        - "focus_patterns"\
        - "energy_rhythms"\
        - "motivation_triggers"\
        - "sensory_preferences"\
        - "processing_style"\
  \
  # Week 2: Executive Function Coach\
  week_2:\
    name: "Executive Function Coach"\
    module: "ExecutiveFunctionCoachGPT"\
    duration: "1 week"\
    objectives:\
      - "Identify executive function breakdowns"\
      - "Map stuck points in task cycle"\
      - "Co-design support systems"\
      - "Create experiment plan"\
    \
    ef_phases:\
      - "Start: Initiating tasks"\
      - "Focus: Maintaining attention"\
      - "Shift: Transitioning between tasks"\
      - "Finish: Completing tasks"\
      - "Recover: Resting and resetting"\
    \
    outputs:\
      - "system_fit_map object"\
      - "Weekly experiment plan"\
    \
    prompts:\
      opening: "Where do you usually get stuck in a task â€” starting, focusing, or finishing? Let's create a system that works with your brain, not against it."\
  \
  # Week 3: Reset Routine Builder\
  week_3:\
    name: "Reset Routine Builder"\
    module: "ResetRoutineBuilderGPT"\
    duration: "1 week"\
    objectives:\
      - "Identify overwhelm triggers"\
      - "Recognize early warning signs"\
      - "Build 3-step regulation plan"\
      - "Practice reset routine"\
    \
    routine_steps:\
      - "Notice: Recognize early warning signs"\
      - "Interrupt: Break the overwhelm cycle"\
      - "Recover: Restore your baseline"\
    \
    outputs:\
      - "reset_routine object: \{notice_cue, interrupt_action, recovery_tool\}"\
      - "Visualization walkthrough"\
    \
    prompts:\
      opening: "What are some early signs that you're getting overwhelmed? Let's build a reset plan that helps you come back online when things get hard."\
  \
  # Week 4: Energy Audit & Boundaries\
  week_4:\
    name: "Energy Audit & Boundaries"\
    module: "EnergyAuditAndBoundaryGPT"\
    duration: "1 week"\
    objectives:\
      - "Track energy by activity"\
      - "Identify energy leaks"\
      - "Create boundary scripts"\
      - "Practice boundary setting"\
    \
    boundary_framework: "Need + Reason + Respectful Closure"\
    \
    tracking_areas:\
      - "Social interactions"\
      - "Work/Study tasks"\
      - "Sensory environments"\
      - "Transitions"\
      - "Self-care activities"\
    \
    outputs:\
      - "Energy Audit Table"\
      - "Boundary scripts collection"\
    \
    prompts:\
      opening: "Let's track where your energy goes this week. What drains you most? What small boundary could help protect your time or space?"\
  \
  # Week 5: Self-Advocacy Trainer\
  week_5:\
    name: "Self-Advocacy Trainer"\
    module: "SelfAdvocacyTrainerGPT"\
    duration: "1 week"\
    objectives:\
      - "Learn advocacy framework"\
      - "Write advocacy scripts"\
      - "Practice role-play scenarios"\
      - "Build advocacy confidence"\
    \
    advocacy_framework: "Describe \u2192 Need \u2192 Request"\
    \
    scenarios:\
      - "Requesting accommodations from professor"\
      - "Setting boundaries with peers"\
      - "Advocating at work/internship"\
      - "Communicating with family"\
    \
    tone_options:\
      - "direct"\
      - "warm"\
      - "gentle"\
      - "formal"\
    \
    outputs:\
      - "Advocacy script collection"\
      - "Role-play practice logs"\
    \
    prompts:\
      opening: "Want to practice asking for what you need? Let's write a self-advocacy script together and try it in a safe role-play."\
  \
  # Week 6: Sustainability Planner\
  week_6:\
    name: "Sustainability Planner"\
    module: "SustainabilityPlannerGPT"\
    duration: "1 week"\
    objectives:\
      - "Integrate all tools"\
      - "Create weekly/monthly plan"\
      - "Establish check-in routine"\
      - "Build maintenance system"\
    \
    integration_layers:\
      structure:\
        - "Task systems & routines"\
        - "Time management tools"\
        - "Organization strategies"\
      \
      regulation:\
        - "Reset routines"\
        - "Energy management"\
        - "Sensory supports"\
      \
      support:\
        - "Boundaries"\
        - "Advocacy scripts"\
        - "Support network"\
    \
    outputs:\
      - "sustainability_map object"\
      - "Weekly maintenance plan"\
      - "Check-in schedule"\
    \
    prompts:\
      opening: "Let's pull all your tools together. How do you want to organize your support system each week so you don't burn out?"\
