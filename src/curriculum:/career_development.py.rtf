    def calculate_completion_rate(self, user_id: str) -> float:\
        """\
        Calculate completion rate for user's learning path.\
        \
        Args:\
            user_id: User identifier\
            \
        Returns:\
            Completion rate as percentage\
        """\
        if user_id not in self.career_profiles:\
            return 0.0\
        \
        progress = self.career_profiles[user_id]["progress"]\
        if not progress:\
            return 0.0\
        \
        completed = sum(1 for entry in progress if entry["status"] == "completed")\
        total = len(progress)\
        \
        return (completed / total) * 100 if total > 0 else 0.0}