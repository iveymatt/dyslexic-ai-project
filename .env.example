# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/dyslexic_ai_benchmark?schema=public"

# Storage Configuration
STORAGE_BASE="./benchmark/storage"

# Dashboard API (optional)
DASHBOARD_API="http://localhost:3000/api/benchmark"

# LLM API Keys for JUDGE (multi-rater scoring)
# You need at least one for JUDGE to work, ideally all three for best results
ANTHROPIC_API_KEY="sk-ant-..."
OPENAI_API_KEY="sk-..."
GOOGLE_AI_API_KEY="..."

# LLM API Keys for RUNNER (testing tools)
# Add API keys for the tools you want to benchmark
CLAUDE_API_KEY="sk-ant-..."
OPENAI_API_KEY="sk-..."
GEMINI_API_KEY="..."
PERPLEXITY_API_KEY="..."

# WATCHER Configuration (optional)
GITHUB_TOKEN="ghp_..."
WATCHER_CHECK_INTERVAL_HOURS="6"

# Orchestrator Configuration
JUDGE_NUM_RATERS="3"
RUNNER_RATE_LIMIT_PER_MIN="30"
RUNNER_TIMEOUT_MS="60000"

# Playwright Configuration (for platform checks)
PLAYWRIGHT_HEADLESS="true"
PLAYWRIGHT_TIMEOUT_MS="30000"
